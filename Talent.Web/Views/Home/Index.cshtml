@model Talent.Web.Models.VkAuthModel

@{
    ViewBag.Title = "title";
    Layout = null;
    var url = string.Format("{0}?client_id={1}&redirect_uri={2}&response_type=code&scope={3}&display=popup", @"http://oauth.vk.com/authorize", Model.ApiId, Model.RedirectUri, Model.Scope);
}



<input type="button" onclick="window.open('@url', 'signin', 'width=780,height=410,toolbar=0,scrollbars=0,status=0,resizable=0,location=0,menuBar=0,left=800,top=500')" value="auth">

